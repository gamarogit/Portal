{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "src/*": [
                "./src/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "tests",
        "jest.config.ts",
        "prisma",
        "scripts",
        "create-admin.ts"
    ]
}