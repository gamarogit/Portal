datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  roleId    String
  role      Role     @relation(fields: [roleId], references: [id])
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Role {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  users       User[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PortalSystem {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  icon        String   @default("ðŸ“¦")
  route       String   // Puede ser ruta interna o URL a microservicio
  apiUrl      String?  // URL del backend del microservicio
  color       String   @default("#667eea")
  enabled     Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ThemeConfig {
  id             String   @id @default(uuid())
  primaryColor   String   @default("#003b4d")
  secondaryColor String   @default("#00afaa")
  accentColor    String   @default("#d9c79e")
  backgroundColor String  @default("#f0f2f5")
  logoUrl        String?
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
